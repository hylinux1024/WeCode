<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/ghost_white</item>
        <item name="sideNavBarBackground">@drawable/side_nav_bar_blue</item>
        <!--<item name="selectableItemBackground">@drawable/selectable_item_background</item>-->
    </style>

    <style name="AppTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="sideNavBarBackground">@drawable/side_nav_bar</item>
    </style>

    <style name="AppTheme.Gray" parent="AppTheme">
        <item name="colorPrimary">@color/primary_gray</item>
        <item name="colorPrimaryDark">@color/primary_dark_gray</item>
        <item name="colorAccent">@color/accent_gray</item>
        <item name="sideNavBarBackground">@drawable/side_nav_bar_gray</item>
    </style>

    <style name="AppTheme.Purple" parent="AppTheme">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="sideNavBarBackground">@drawable/side_nav_bar_purple</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="sideNavBarBackground">@drawable/side_nav_bar_red</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_app_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
